{
  "expo": {
    "name": "AI Inbox",
    "slug": "ai-inbox",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "aiinbox",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.aiinbox.mobile"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.aiinbox.mobile"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-share-intent",
        {
          "ios": {
            "groupIdentifier": "group.com.aiinbox.mobile",
            "activationRules": {
              "NSExtensionActivationSupportsText": true,
              "NSExtensionActivationSupportsWebURLWithMaxCount": 1
            }
          },
          "android": {
            "intentFilters": [
              {
                "action": "android.intent.action.SEND",
                "data": {
                  "mimeType": "text/plain"
                }
              },
              {
                "action": "android.intent.action.SEND",
                "data": {
                  "mimeType": "image/*"
                }
              },
              {
                "action": "android.intent.action.SEND",
                "data": {
                  "mimeType": "application/pdf"
                }
              },
              {
                "action": "android.intent.action.SEND",
                "data": {
                  "mimeType": "application/*"
                }
              }
            ]
          }
        }
      ],
      "expo-web-browser",
      "expo-auth-session",
      "expo-secure-store",
      [
        "expo-calendar",
        {
          "calendarPermission": "Allow AI Inbox to access your calendar to provide schedule context."
        }
      ]
    ]
  }
}